        <button class="navbar-toggler" data-target="#Navbar" data-toggle="collapse" type="button">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand mr-auto" href="http://localhost:8082/home"><img src="../logo.png" height="30" width="30"></a>
        <div class="collapse navbar-collapse" id="Navbar">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/home"><span><i class="fa fa-home fa-lg"></i></span> Home</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/profile">Profile</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/upload">Upload</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/users">Users</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/home/archive">Archive</a></li>
                <li class="nav-item"><a class="nav-link" href="http://localhost:8082/logout">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>

<header class="jumbotron">
    <div class="container">
        <div class="row row-header">
            <div class="col-12 col-sm-6">
                <h1>Specific Image</h1>
            </div>
            <div class="col-12 col-sm align-self-center">
                <p>See information about the selected image below:</p>
            </div>
        </div>
    </div>
</header>


<div class="container">
    <div class="row row-content align-items-center">
        <div class="col col-md-4 col-sm-6">
            <img src="../uploads/<%= info[0].filename %>" alt="<%= info[0].filename %>" width="200" height="200">
        </div>
        <div class="col col-md-8 col-sm-6">

            <table class="table table-bordered">
                <tbody>
                <tr>
                    <th scope="row">File Name</th>
                    <td><%= info[0].filename %></td>
                </tr>
                <tr>
                    <th scope="row">Username</th>
                    <td><%= info[0].username %></td>
                </tr>
                <tr>
                    <th scope="row">Upload Date</th>
                    <td><%= info[0].uploadDate %></td>
                </tr>
                <tr>
                    <th scope="row">Number of Likes</th>
                    <td><p id="likes"></p></td>
                </tr>
                <tr>
                    <th scope="row">Number of Comments</th>
                    <td><p id="comments"></p></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col col-md-4 col-sm-6">
            <button onclick="likeImage(`<%= info[0].filename %>`); setTimeout(function(){getTotalLikes(`<%= info[0].filename %>`)}, 100);" class="btn-success" id="liked">Like</button>
        </div>
    </div>
    <div class="row row-content align-items-center">
        <div class="col">
            <form action="/image/comment/`<%= info[0].filename %>`" method="post">
                <div class="form-group row">
                    <label for="comment" class="col col-md-8 col-sm-6 col-form-label">Add a comment?</label>
                    <div class="col-md-12">
                        <textarea class="form-control" id="textEntry" name="comment" rows="4"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class=" col">
                        <button onclick="postComment(`<%= info[0].filename %>`); setTimeout(function(){getTotalComments(`<%= info[0].filename %>`)}, 100);" type="button" class="btn btn-success">Submit</button>
                    </div>
                </div>
                <div>
                    <br>
                    <h3>Comments:</h3>
                </div>
                <table class ="table table-bordered">
                    <tbody>
                    <tr id="display">
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>

