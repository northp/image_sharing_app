<header class="jumbotron">
    <div class="container">
        <div class="row row-header">
            <div class="col-12 col-sm-6">
                <h1>Image Archive</h1>
            </div>
            <div class="col-12 col-sm align-self-center">
                <p>Take a look at some of the uploads on the site!</p>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row row-content align-items-center">
        <% for(var i = 0; i < uploads.length; i++) { %>
            <div class="col col-md-4 col-sm-6">
                <!--<div >-->
                    <!--&lt;!&ndash;this part works&ndash;&gt;-->
                    <!--<button onclick="getTotalLikes()" class="btn-warning">Like</button>-->
                    <!--<button class="btn-warning">Comment</button>-->
                <!--</div>-->
                <img src="../uploads/<%= uploads[i].filename %>" alt="<%= uploads[i].filename %>" width="200" height="200">
                <div><br></div>
            </div>

            <div class="col col-md-8 col-sm-6">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">Image Name</th>
                        <td style="width: 75%"><a href="http://localhost:8082/image/<%= uploads[i].filename %>"><%= uploads[i].filename %></a></td>
                    </tr>
                    <tr>
                        <th scope="row">User</th>
                        <td><a href="http://localhost:8082/profile/<%= uploads[i].username %>"><%= uploads[i].username %></a></td>
                    </tr>
                    <tr>
                        <th scope="row">Likes</th>
                        <td><%= uploads[i].totalLikes %></td>
                    </tr>
                    <tr>
                        <th scope="row">Comments</th>
                        <td><%= uploads[i].totalComments %></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

